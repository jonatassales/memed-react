{
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "./",
    "target": "ES2018",
    "module": "esnext",
    "lib": ["ES2018", "DOM"],
    "declaration": true,
    "composite": false,
    "downlevelIteration": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "react"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**"
  ]
}
